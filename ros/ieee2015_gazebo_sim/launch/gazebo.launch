<launch>
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find ieee2015_gazebo_sim)/media/ieee.world"/>
  </include>
  <node
    name="tf_footprint_base"
    pkg="tf"
    type="static_transform_publisher"
    args="0 0 0 0 0 0 base_link base_footprint 40" />
  
  <node
    name="spawn_urdf"
    pkg="gazebo_ros"
    type="spawn_model"
    args="-file $(find ieee2015_robot)/urdf/IEEEurdf.URDF -urdf -z 0.2 -model ieee2015_robot"
    output="screen" />

  <node
    name="spawn_sdf"
    pkg="gazebo_ros"
    type="spawn_model"
    args="-file $(find ieee2015_gazebo_sim)/stage/model.sdf -sdf -y -0.9 -z 0.0 -model stage"
    output="screen" />

  <node
    name="fake_joint_calibration"
    pkg="rostopic"
    type="rostopic"
    args="pub /calibrated std_msgs/Bool true" />

</launch>